<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgourd_item_order_product"
    android:layout_height="@dimen/_50sdp">
    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_account_circle_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#910303"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="0982173912" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvEmployeeBirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10/07/2021"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvEmployeePhone"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="0982173912"
                android:textColor="#910303" />

            <TextView
                android:id="@+id/tvEmployeeEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="thao@gmail.com"
                android:textColor="#910303" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>