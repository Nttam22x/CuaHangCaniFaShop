<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgourd_item_order_product"
    android:layout_height="@dimen/_50sdp">
    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_invetory"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvIDReceipt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DH.1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ngày nhập : 10/07/2021"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvTotalProduct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Số lượng nhập : 30"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>